@using Razor.App.HtmlHelper
@using Razor.App.Models
@model Razor.App.Models.Person
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <table class="table table-striped">
        <tr>
            <th>@Html.DisplayNameFor(m => m.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Age)</th>
            <th>@Html.DisplayNameFor(m => m.Email)</th>
            <th>@Html.DisplayNameFor(m => m.IsSubscribed)</th>
        </tr>
        @foreach (Person person in ViewBag.People)
        {
            <tr>
                <td>@Html.DisplayFor(m => person.Name)</td>
                <td>@Html.DisplayFor(m => person.Age)</td>
                <td>@Html.DisplayFor(m => person.Email)</td>
                <td>@Html.DisplayFor(m => person.IsSubscribed)</td>
            </tr>
        }
    </table>
    @Html.Image(imageUrl: "https://s-media-cache-ak0.pinimg.com/736x/92/9d/3d/929d3d9f76f406b5ac6020323d2d32dc.jpg",  width: 100)<br/>
    @Html.YouTube("JxWfvtnHtS0")
    @Html.Table((IEnumerable<Person>) ViewBag.People)
    <hr/>
    @Html.Table((IEnumerable<Person>)ViewBag.People, "table-striped", "table-bordered")
    <hr />
    @Html.Table((IEnumerable<Person>)ViewBag.People, "table-condensed")
</div>