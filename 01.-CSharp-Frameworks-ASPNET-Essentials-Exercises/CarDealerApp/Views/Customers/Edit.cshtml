@model CarDealer.ViewModels.Customers.CustomerViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Customer: </h2>

<form method="POST">

    <div class="form-horizontal">
        <hr />
        <input type="hidden" name="Id" value="@Model.Id" />
        <div class="form-group">
            <label for="name" class="col-md-2">Name:</label>
            <input type="text" class="form-control col-md-10" id="name" name="Name" value="@Model.Name" />
        </div>

        <div class="form-group">
            <label for="birthdate" class="col-md-2">Birth date:</label>
            <input type="date" class="form-control col-md-10" id="birthdate" name="Birthdate" value="@Model.BirthDate.ToString("yyyy-MM-dd")" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>

</form>