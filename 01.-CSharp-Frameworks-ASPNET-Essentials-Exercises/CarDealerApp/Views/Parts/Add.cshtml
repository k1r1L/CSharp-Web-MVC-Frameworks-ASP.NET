@using CarDealer.ViewModels
@using CarDealer.ViewModels.Suppliers
@model IEnumerable<CarDealer.ViewModels.Suppliers.SupplierViewModel>

@{
    ViewBag.Title = "Add";
}

<h2>Add Part:</h2>

<form method="POST">

    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label for="name" class="control-label col-md-2">Name:</label>
            <input type="text" class="form-control col-md-10" id="name" name="Name"/>
        </div>

        <div class="form-group">
            <label for="price" class="control-label col-md-2">Price:</label>
            <input type="number" step="0.01" min="0" class="form-control col-md-10" id="price" name="Price" />
        </div>

        <div class="form-group">
            <label for="quantity" class="control-label col-md-2">Quantity:</label>
            <input type="number" class="form-control col-md-10" id="quantity" name="Quantity" />
        </div>
        
        <div class="form-group">
            <label for="suppliers" class="control-label col-md-2">Suppliers:</label>
            <select name="Supplier" class="form-control col-md-10" id="suppliers">
                @foreach (SupplierViewModel supplier in @Model)
                {
                    <option>@supplier.Id. @supplier.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>


